<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hong.studyandroid">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StudyActivity" />
        <activity android:name=".TransferActivityA" />
        <activity android:name=".ActivityB" />
        <activity android:name=".LifeCycle" />
        <activity android:name=".HandlerDemo1Activity" />
        <activity android:name=".HandlerDemo2Activity" />
        <activity android:name=".VolleyDemoActivity" />
        <activity android:name=".MockLoginByVolleyActivity" />
        <activity
            android:name=".TestPreferenceActivity"
            android:theme="@android:style/Theme.NoTitleBar" />

        <receiver android:name="com.hong.broadcast.CommonBroadcastReceiver">
            <intent-filter>
                <action android:name="com.hong.common.broadcast"></action>
            </intent-filter>
        </receiver>

        <receiver android:name="com.hong.broadcast.OrderBroadcastReceiver1">

            <intent-filter android:priority="1000">
                <action android:name="com.hong.order.broadcast"></action>
            </intent-filter>
        </receiver>


        <receiver android:name="com.hong.broadcast.OrderBroadcastReceiver2">
            <intent-filter>
                <action android:name="com.hong.order.broadcast"></action>
            </intent-filter>
        </receiver>

        <service android:name="com.hong.service.BlockSmsAndCallService"></service>
    </application>

</manifest>
