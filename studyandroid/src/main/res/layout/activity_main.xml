<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:text="studyActivity"
        android:onClick="studyActivity"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="sendBroadcast"
        android:onClick="sendBroadcast"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="sendOrderBroadcast"
        android:onClick="sendOrderBroadcast"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="blockSmsAndCall"
        android:onClick="blockSmsAndCall"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="handlerDemo"
        android:onClick="handlerDemo"
        android:layout_height="wrap_content" />


</LinearLayout>
