<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="系数"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/bt_memory_leak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="memoryLeak"
            android:text="内存泄露" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-42,2-22,5-8,10-5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:onClick="memoryOut"
        android:text="内存溢出" />
    <!--
        <Button
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="listenKeypad"
            android:text="监听键盘"
            />-->


    <TextView
        android:layout_width="wrap_content"
        android:text="Tip:"
        android:textSize="25sp"
        android:textColor="#ff0000"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text=" adb shell getprop|grep heapgrowthlimit"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="256M"
        android:textSize="10sp"
        android:textColor="#ff0000"
        android:layout_height="wrap_content"/>


    <!--<TextView
        android:layout_width="wrap_content"
        android:text="adb shell getprop|grep dalvik.vm.heapsize"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="512M"
        android:textSize="10sp"
        android:textColor="#ff0000"
        android:layout_height="wrap_content"/>-->


</LinearLayout>
